<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatwaraApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_dark</item>
        <item name="colorPrimaryVariant">@color/main_background_dark</item>
        <item name="colorOnPrimary">@color/main_background_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_blue</item>
        <item name="colorSecondaryVariant">@color/deep_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/main_background_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="CustomSearchViewTheme" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">13sp</item>
        <item name="android:editTextColor">@color/main_background_dark</item>
    </style>

</resources>